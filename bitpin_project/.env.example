# Django Settings
DJANGO_SETTINGS_MODULE=bitpin_project.settings
DEBUG=1

# Database Settings
DB_ENGINE=django.db.backends.postgresql
DB_NAME=bitpin_db
DB_USER=postgres
DB_PASSWORD=postgres
DB_HOST=db
DB_PORT=5432

# PostgreSQL Database URL (alternative to individual settings)
DATABASE_URL=postgresql://postgres:postgres@db:5432/bitpin_db

# Redis Settings
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_DB=1
REDIS_PASSWORD=
REDIS_URL=redis://redis:6379/1

# Static and Media Files
STATIC_URL=/static/
STATIC_ROOT=/app/staticfiles

# Cache Settings
CACHE_TIMEOUT=300
CACHE_KEY_PREFIX=bitpin_

# Rate Limiting
RATELIMIT_ENABLE=1
RATELIMIT_RATE=100/h